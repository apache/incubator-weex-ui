# editorconfig.org
# https://github.com/editorconfig/editorconfig/wiki/Projects-Using-EditorConfig

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true


[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false
